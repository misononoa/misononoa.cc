---
export interface Props {
    listName: string;
    elements: string[];
}
const { listName, elements } = Astro.props;
---

<details>
    <summary>
        <span>{listName}</span>
    </summary>
    <ul>
        {elements.map((e) => <li>{e}</li>)}
    </ul>
</details>

<style>
    details:first-of-type summary::marker,
    :is(::-webkit-details-marker) {
        content: "+";
        font-weight: bold;
    }

    details[open]:first-of-type summary::marker {
        content: "-";
    }

    ul {
        margin: 0;
        padding-left: 1rem;
        list-style-type: none;
    }

    li {
        margin-top: 0.25rem;
        margin-bottom: 0.25rem;
    }
</style>
