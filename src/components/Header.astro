---
import Hamburger from "./Hamburger.tsx";
import "@fontsource/dotgothic16";

export interface Props {
	title: string;
}
const { title } = Astro.props;
---

<header>
	<h1>{title}</h1>
	<nav>
		<Hamburger client:load />
	</nav>
</header>

<style>
	header {
		display: flex;
		position: absolute;
		top: 1rem;
		width: 100%;
	}

	header nav {
		display: flexbox;
		position: absolute;
		top: 5rem;
	}

	h1 {
		margin: 1rem 0;
		font-size: 2rem;
	}
</style>
