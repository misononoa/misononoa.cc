---
export interface Props {
	fqdn: string;
	path?: string;
	name: string;
	text: string;
}

const { fqdn, path, name, text } = Astro.props;
const isMisskey: boolean = text.toLowerCase().match("misskey") ? true : false;

const locator: string =
	`https://${fqdn}/` + (path !== undefined ? `${path}/${name}` : `${name}`);
const display: string = isMisskey ? text + "🍀" : text;
---

<p><a href={locator}>{display}</a></p>
