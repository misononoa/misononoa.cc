{
	"name": "misononoa.cc",
	"build": {
		"dockerfile": "Dockerfile",
		"context": "."
	},
	"customizations": {
		"vscode": {
			"settings": {
				"terminal.integrated.shell.linux": "/bin/zsh",
				"editor.tabSize": 3,
				"editor.tabCompletion": "on",
				"prettier.tabWidth": 3
			},
			"extensions": [
				"astro-build.astro-vscode",
				"esbenp.prettier-vscode",
				"dbaeumer.vscode-eslint"
			]
		}
	},
	"forwardPorts": [
		4321
	],
	"postCreateCommand": "pnpm install",
	"remoteUser": "node",
	"containerUser": "node"
}