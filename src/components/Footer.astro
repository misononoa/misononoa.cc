---
export interface Props {
	displayAside?: boolean;
}

const { displayAside } = Astro.props;

const creditsStr = [
	"Astro by Astro Contributors",
	"misskey.js by syuilo and other contributors",
	"React by Meta Platforms, Inc. and affiliates",
	"Fluent Emoji Flat by Microsoft Corporation",
];
---

<footer>
	{
        (
        <aside>
            {displayAside ?
            (
            <h2>このサイトに使用した著作物</h2>
            <ul>
                {creditsStr.map((text) => (
                    <li>{text}</li>
                ))}
            </ul>
            )
            : null}
        </aside>
        )
    }
</footer>
<style define:vars={{}}>
	footer {
		margin-top: 7ch;
	}
	aside {
		display: contents;
		font-size: 75%;
		color: gray;
	}

	@media (max-width: 600px) {
		aside {
			margin: auto;
		}
	}

	@media (max-width: 450px) {
		aside h2 {
			font-size: medium;
		}
	}

	aside ul {
		font-size: 105%;
	}
</style>
